<UserControl x:Class="Jacobi.Vst.Samples.MidiNoteSampler.UI.ParameterKnob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jacobi.Vst.Samples.MidiNoteSampler.UI"
             mc:Ignorable="d" 
             Height="40" Width="300">
    <Grid >
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Label x:Name="label" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Content="{Binding Label, Mode=OneWay}" Foreground="White" Padding="0"/>
    <TextBox x:Name="textBox" HorizontalAlignment="Right" Width="120" Grid.Row="0" Text="{Binding ValueString, Mode=OneWay}" IsReadOnly="True" Grid.Column="1" Background="DarkGray"/>
    <Slider Visibility="{Binding SliderVisibility}" IsSnapToTickEnabled="False" Minimum="0" Maximum="1" x:Name="slider" HorizontalAlignment="Stretch" VerticalAlignment="Top" Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.ColumnSpan="2"/>
    <CheckBox Visibility="{Binding CheckboxVisibility}" HorizontalAlignment="Left" Grid.Row="2" IsChecked="{Binding IsValue, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2" />
  </Grid>
</UserControl>
