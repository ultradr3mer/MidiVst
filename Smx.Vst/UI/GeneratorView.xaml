<UserControl x:Class="Smx.Vst.UI.GeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smx.Vst.UI"
             mc:Ignorable="d" 
             Height="25" Width="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="30"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Label Grid.Column="0"  Content="{Binding Label}" Padding="0" Margin="3" VerticalAlignment="Center"/>
    <CheckBox Grid.Column="1" IsChecked="{Binding IsValue}" x:Name="checkBox" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3"/>
    <Slider Grid.Column="2" IsSnapToTickEnabled="False" Minimum="0" Maximum="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3" Value="{Binding PhaseValue, UpdateSourceTrigger=PropertyChanged}"/>
  </Grid>
</UserControl>
